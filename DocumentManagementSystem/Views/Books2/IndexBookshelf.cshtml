
@{
    ViewBag.Title = "书架";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>书架</h3>
            @Html.Action("SingleBookshelf", new { ViewBag.Id })
        </div>
        <div class="col-md-6">
            <h3>目录</h3>
            @Html.Action("DirectoryBookshelf", new { ViewBag.Id })
        </div>
    </div>
    <hr />
    <h3>子书架</h3>
    @Html.Action("ListBookShelf", new { ViewBag.Id })
    @if (ViewBag.Id != null)
    {
        <hr />
        <h3>子书籍</h3>
        @Html.Action("ListBook", new { ViewBag.Id })
    }
</div>