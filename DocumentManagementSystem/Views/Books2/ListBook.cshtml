@model IEnumerable<DocumentManagementSystem.Models.ViewModels.Books2.Item>

<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th class="text-center" width="25%">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="text-center" width="6%">
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th class="text-center" width="6%">
                @Html.DisplayNameFor(model => model.IsChecked)
            </th>
            <th class="text-center" width="30%">
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th class="text-center" width="12%">
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Title, "IndexBook", new { id = item.DocumentId })
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.IsChecked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
            </tr>
        }
    </tbody>
</table>