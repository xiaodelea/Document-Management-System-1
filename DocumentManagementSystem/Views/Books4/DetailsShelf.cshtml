@model DocumentManagementSystem.Models.ViewModels.Books4.DetailsShelf.DetailsShelf

@{
    ViewBag.Title = Model.Title;
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("返回书架一览", "IndexShelf", "Books4", null, null)</li>
</ul>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <hr />
            <div class="btn-group">
                @Html.ActionLink("添加书架", "CreateShelf", new { ParentDocumentId = Model.DocumentId }, new { @class = "btn btn-default" })
            </div>
            @Html.Action("IndexShelfForShelf", new { ParentDocumentId = Model.DocumentId })
        </div>
        <div class="col-md-8">
            <hr />
            <div class="btn-group">
                @Html.ActionLink("编辑", "EditShelf", new { Model.DocumentId }, new { @class = "btn btn-default" })
                @Html.ActionLink("移动", "MoveShelf", new { DocumentId = Model.DocumentId }, new { @class = "btn btn-default" })
            </div>
            <div class="table-bordered alert-success">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Priority)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Priority)
                    </dd>

                    <dt>
                        <span>书架</span>
                    </dt>
                    <dd>
                        @Html.Action("ListShelfForShelf", new { DocumentId = Model.DocumentId })
                    </dd>
                </dl>
            </div>
            <hr />
            <div class="btn-group">
                @Html.ActionLink("添加书籍", "CreateBook", new { ParentDocumentId = Model.DocumentId }, new { @class = "btn btn-default" })
            </div>
            @Html.Action("IndexBookForShelf", new { ParentDocumentId = Model.DocumentId })
        </div>
    </div>
</div>