@model DocumentManagementSystem.Models.ViewModels.Books4.IndexBook.Route

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.IsChecked, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.IsChecked, new { htmlAttributes = new { @class = "form-control" } })
            </div>
                  
            <div class="col-md-2">
                @Html.LabelFor(model => model.TitlePart, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.TitlePart, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="row" style="padding-top:10px">
            <div class="col-md-12 btn-group">
                <button formmethod="get" type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    筛选
                </button>
                <a href="@Url.Action("IndexBook")" class="btn btn-default">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    清空
                </a>
            </div>
        </div>
    </div>
}