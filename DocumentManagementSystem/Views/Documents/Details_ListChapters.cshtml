@model IEnumerable<DocumentManagementSystem.Models.ViewModels.Documents.Details.ItemChapter>

<table class="table table-bordered table-condensed table-hover">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ChapterName)
            </th>
            <th class="text-center" width="60px">
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th class="text-center" width="60px">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ChapterName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.ActionLink("删除", "DeleteChapter", new { chapterId = item.ChapterId })
                </td>
            </tr>
        }
    </tbody>
</table>