@model DocumentManagementSystem.Models.ViewModels.Books.Details.Concrete

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IsChecked)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsChecked)

            @if (!Model.IsChecked)
            {
                <button class="label label-default" onclick="setChecked('@Model.DocumentId')">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    设置
                </button>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsBookmarked)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsBookmarked)
        </dd>
    </dl>
</div>